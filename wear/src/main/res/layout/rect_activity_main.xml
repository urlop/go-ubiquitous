<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.android.sunshine.app.MainActivity" tools:deviceIds="wear_square">

    <TextView android:id="@+id/tv_clock"
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:50"
        android:textColor="@color/primary_text"
        android:textSize="45sp"
        android:layout_marginTop="20dp"/>

    <TextView android:id="@+id/tv_date"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI, JUL 14 2015"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/iv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Weather image"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"/>

        <TextView android:id="@+id/tv_max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25°"
            android:textColor="@color/primary_text"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"/>

        <TextView android:id="@+id/tv_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16°"
            android:textColor="@color/secondary_text"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>
</LinearLayout>
