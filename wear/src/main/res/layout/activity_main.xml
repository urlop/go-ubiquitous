<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/container" tools:context=".MainActivity"
    tools:deviceIds="wear">

    <TextView android:id="@+id/tv_clock"
        app:layout_box="all"
        android:layout_gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:50"
        android:textColor="@color/primary_text"
        android:textSize="38sp"
        android:layout_marginTop="20dp"/>

    <TextView android:id="@+id/tv_date"
        app:layout_box="all"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI, JUL 14 2015"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"/>

    <ImageView android:id="@+id/iv_temp"
        android:layout_gravity="bottom|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Weather image"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"/>

    <TextView android:id="@+id/tv_max_temp"
        app:layout_box="all"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25°"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>

    <TextView android:id="@+id/tv_min_temp"
        app:layout_box="all"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16°"
        android:textColor="@color/secondary_text"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"/>



</android.support.wearable.view.BoxInsetLayout>
